= turbo_frame_tag dom_id(section) do
  .section-display
    .section-info
      .section-name
        = section.name
      .section-recipe-count
        = pluralize(section.recipes.count, 'recipe')
    .section-actions
      = link_to 'Edit', edit_section_path(section), class: 'btn btn-secondary btn-sm'
      = button_to 'Delete', section_path(section), method: :delete, class: 'btn btn-danger btn-sm', data: { turbo_confirm: 'Are you sure? Recipes in this section will become uncategorized.' }
